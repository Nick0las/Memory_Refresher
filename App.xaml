<Application x:Class="Memory_Refresher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Memory_Refresher"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles\MenuStyle.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ButtonsStyle.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TabControlStyle.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TabItemStyle.xaml"/>
                <ResourceDictionary Source="Resources\Styles\MenuItemStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
